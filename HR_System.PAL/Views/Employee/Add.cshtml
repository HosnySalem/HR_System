@model Employee

@{
    ViewData["Title"] = "Add New Employee";
}

<style>
    .parent {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .panel, form, .panel-heading{
        width: 120%

    }
    form {
        background-color: #fff;
        min-height: 300px;
    }

        /* Set a white background and rounded borders */
        form.row {
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
        }

        /* Add some margin and padding to the form elements */
        form .form-group {
            margin-bottom: 20px;
            padding: 0 10px;
        }

        /* Style the input fields */
        form input[type="text"],
        form input[type="date"] {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        /* Style the submit button */
        form input[type="submit"] {
            /*background-color: #28a745;*/
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            border: none;
            font-size: 16px;
            cursor: pointer;
        }

        /* Add some margin to the submit button */
        form .form-group:last-child {
            margin-bottom: 0;
        }
</style>


<div class="parent mt-5">
    <div class="panel panel-default templatemo-content-widget white-bg no-padding templatemo-overflow-hidden">
        <div class="panel-heading templatemo-position-relative" style="background-color:#0d6efd">
            <h2 class="text-uppercase">Add New Employee</h2>
        </div>
        <form asp-action="Add" class="row p-3 mt-3">
            <div class="col-md-5 col-sm-12">
                <h3 class="p-2 mb-3 text-center">Personal data</h3>

                <div class="form-group">
                    <div class="d-flex align-items-center justify-content-between">
                        <label asp-for="Name" class="control-label fs-6 ms-2">Employee Name</label>
                        <input type="text" asp-for="Name" class="form-control  w-75" />
                    </div>
                    <div class="d-flex justify-content-end">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex align-items-center justify-content-between">
                        <label asp-for="Address" class="control-label fs-6 ms-2">Address</label>
                        <input type="text" asp-for="Address" class="form-control  w-75" />
                    </div>
                    <div class="d-flex justify-content-end">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex align-items-center justify-content-between">
                        <label asp-for="PhoneNumber" class="control-label fs-6 ms-3">Phone Number</label>
                        <input type="text" asp-for="PhoneNumber" class="form-control  w-75" />
                    </div>
                    <div class="d-flex justify-content-end">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex align-items-center justify-content-between">
                        <label asp-for="Gender" class="control-label fs-6 ms-2">Gender</label>
                        <select asp-for="Gender" class="form-select  w-75">
                            <option value="">--Select --</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                    <div class="d-flex justify-content-end">
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex align-items-center justify-content-between">
                        <label asp-for="Nationality" class="control-label fs-6 ms-2">Nationality</label>
                        <input type="text" asp-for="Nationality" class="form-control  w-75" />
                    </div>
                    <div class="d-flex justify-content-end">
                        <span asp-validation-for="Nationality" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex align-items-center justify-content-between">
                        <label asp-for="Birthdate" class="control-label fs-6 ms-2">Birthdate</label>
                        <input asp-for="Birthdate" class="form-control datepicker  w-75" />
                    </div>
                    <div class="d-flex justify-content-end">
                        <span asp-validation-for="Birthdate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex align-items-center justify-content-between">
                        <label asp-for="NationalID" class="control-label fs-6 ms-2">National ID</label>
                        <input type="text" asp-for="NationalID" class="form-control w-75" />
                    </div>
                    <div class="d-flex justify-content-end">
                        <span asp-validation-for="NationalID" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-5 col-sm-12">
                <h3 class="p-2 mb-3 text-center">Work data</h3>

                <div class="form-group">
                    <div class="d-flex align-items-center justify-content-between">
                        <label asp-for="DateOfContract" class="control-label fs-6 ms-2 mx-2">Hiring Date</label>
                        <input asp-for="DateOfContract" class="form-control datepicker w-75" />
                    </div>
                    <div class="d-flex justify-content-end">
                        <span asp-validation-for="DateOfContract" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex align-items-center justify-content-between">
                        <label asp-for="DepartmentId" class="control-label fs-6 ms-2 mx-2">Deptartments</label>
                        <select asp-for="DepartmentId" asp-items="@ViewBag.Deptartments" class="form-select w-75">
                            <option value="">--Select Deptartment--</option>
                        </select>
                    </div>
                    <div class="d-flex justify-content-end">
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex align-items-center justify-content-between">
                        <label asp-for="Salary" class="control-label fs-6 ms-2 mx-4">Salary</label>
                        <input type="number" asp-for="Salary" class="form-control w-75" />
                    </div>
                    <div class="d-flex justify-content-end">
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex align-items-center justify-content-between">
                        <label asp-for="AttendanceTime" class="control-label fs-6 ms-2">Attendance Time</label>
                        <input asp-for="AttendanceTime" class="form-control w-75" type="time" step="60" />
                    </div>
                    <div class="d-flex justify-content-end">
                        <span asp-validation-for="AttendanceTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex align-items-center justify-content-between">
                        <label asp-for="DepartureTime" class="control-label fs-6 ms-2">Departure Time</label>
                        <input asp-for="DepartureTime" class="form-control w-75" type="time" step="60" />
                    </div>
                    <div class="d-flex justify-content-end">
                        <span asp-validation-for="DepartureTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mt-4 d-flex justify-content-center">
                    <input type="submit" value="Add" style="background-color: var(--main-color)" class="btn align-self-start w-50" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('.datepicker').datepicker({
                format: 'dd/MM/yyyy',
                autoclose: true
            });
        });
    </script>
}